<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>x</servlet-name>
        <servlet-class>org.example.controller.Register</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>y</servlet-name>
        <servlet-class>org.example.controller.Logout</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>z</servlet-name>
        <servlet-class>org.example.controller.SignUp</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>xx</servlet-name>
        <servlet-class>org.example.controller.sendOTP</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>yy</servlet-name>
        <servlet-class>org.example.controller.verifyCode</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>x</servlet-name>
        <url-pattern>/register.do</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>y</servlet-name>
        <url-pattern>/logout.do</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>z</servlet-name>
        <url-pattern>/signup.do</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>xx</servlet-name>
        <url-pattern>/sendOTP.do</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>yy</servlet-name>
        <url-pattern>/verifyCode.do</url-pattern>
    </servlet-mapping>
</web-app>